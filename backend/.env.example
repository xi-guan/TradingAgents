# 应用配置
APP_NAME=TradingAgents
APP_VERSION=0.1.0
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# 数据库配置
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5437/tradingagents
DATABASE_ECHO=false

# Redis 配置
REDIS_URL=redis://localhost:6385/0
REDIS_PASSWORD=

# Qdrant 配置
QDRANT_URL=http://localhost:6435
QDRANT_API_KEY=

# JWT 配置
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS 配置
CORS_ORIGINS=["http://localhost:3005","http://localhost:5173"]

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# Alpha Vantage API
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# Tushare API（中国股市数据）
TUSHARE_TOKEN=your-tushare-token

# Celery 配置
CELERY_BROKER_URL=redis://localhost:6385/1
CELERY_RESULT_BACKEND=redis://localhost:6385/2

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 数据目录
DATA_DIR=./data

# 默认语言
DEFAULT_LANGUAGE=zh_CN

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
